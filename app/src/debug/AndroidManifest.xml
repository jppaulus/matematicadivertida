<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.joaop.matematicadivertida">
    <application android:name=".DebugApplication">
        <!-- Disable Firebase auto-init provider in debug -->
        <provider
            android:name="com.google.firebase.provider.FirebaseInitProvider"
            android:authorities="com.joaop.matematicadivertida.firebaseinitprovider"
            android:enabled="false"
            tools:node="replace" />

        <!-- Disable MobileAds auto-init provider in debug -->
        <provider
            android:name="com.google.android.gms.ads.MobileAdsInitProvider"
            android:authorities="com.joaop.matematicadivertida.mobileadsinitprovider"
            android:enabled="false"
            tools:node="replace" />

        <!-- Disable analytics and crashlytics collection in debug -->
        <meta-data
            android:name="firebase_analytics_collection_deactivated"
            android:value="true"
            tools:node="replace" />

        <meta-data
            android:name="firebase_analytics_collection_enabled"
            android:value="false"
            tools:node="replace" />

        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="false"
            tools:node="replace" />
        
        <!-- Prevent Firebase component discovery in debug -->
        <service
            android:name="com.google.firebase.components.ComponentDiscoveryService"
            android:enabled="false"
            tools:node="replace" />
    </application>
</manifest>
